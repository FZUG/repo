-
-   cat >> "$SPEC_PATH" << EOF
-
-%files
-EOF
-
-# Prepare directories to be included in the .spec file
-mv ${TMP_DIR}/newfiles ${TMP_DIR}/newfiles.tmp
-cat ${TMP_DIR}/newfiles.tmp | while read line; do
