-
-PKG_LOCATION="${DIRECTORIO_FUENTE}/${SLACK_PKG_BASENAME}.tgz"
-INSTALLSTRING="installpkg ${SLACK_PKG_BASENAME}.tgz"
-REMOVESTRING="removepkg ${SLACK_PKG_BASENAME}"
-
-fi
-;;
